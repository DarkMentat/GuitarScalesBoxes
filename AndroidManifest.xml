<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="org.darkmentat.GuitarScalesBoxes"
          android:versionCode="1"
          android:versionName="1.0">
    <uses-sdk android:minSdkVersion="10" android:targetSdkVersion="20"/>
    <application  android:label="@string/app_name"
                  android:icon="@drawable/ic_main"
                  android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen">
        <activity android:name=".Activities.Main"
                  android:label="@string/app_name"
                  android:screenOrientation="sensorLandscape"
                  android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".Activities.ScalesOverview"
                  android:screenOrientation="sensorLandscape"/>
        <activity android:name=".Activities.ScaleDescription"
                  android:screenOrientation="sensorLandscape"/>
        <activity android:name=".Activities.SelectNote"
                  android:screenOrientation="sensorLandscape"/>
    </application>
</manifest>
